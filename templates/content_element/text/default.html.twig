{% use "@Contao/component/_picture.html.twig" %}
{% use "@Contao/component/_rich_text.html.twig" %}

{% set image = figure(
  data.singleSRC,
  [800, 800, 'crop'],
  { metadata: { alt: headline.text}, enableLightbox: true, linkHref: data.singleSRC })
%}

<div class="defaultcontainer">
  <div class="grid md:p-0 md:grid-cols-2 items-start gap-8">
    <div class="overflow-hidden border-t-4 border-gray-800 pt-10">
      {% if image %}
        {% with {figure: image} %}{{ block('picture_component') }}{% endwith %}
      {% endif %}
    </div>
    <div class="md:pt-10 flex flex-col items-start">
      <h4 class="text-2xl text-black font-sans uppercase font-bold !mt-0">{{ headline.text }}</h4>
      <div class="mt-2 leading-relaxed prose">
        {% with {text, attributes: text_attributes|default} %}{{ block('rich_text_component') }}{% endwith %}
      </div>
    </div>
  </div>
</div>
